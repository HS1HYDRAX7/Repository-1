TopBar.BackgroundColor3 = Color3.fromRGB(28, 28, 36)
TopBar.Parent = Main

local TopCorner = Instance.new("UICorner")
TopCorner.CornerRadius = UDim.new(0, 18)
TopCorner.Parent = TopBar

